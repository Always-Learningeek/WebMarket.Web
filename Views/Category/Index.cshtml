@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class="table table-striped table-bordered" style="width : 100%">
	<tread>
		<tr>
			<th>
				نام دسته
			</th>
			<th>
				ترتیب نمایش
			</th>
		</tr>

	</tread>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td width="50%">
					@obj.Name
				</td>
				<td width="50%">
					@obj.DisplayOrder
				</td>
			</tr>
		}
	</tbody>

</table>
